<%= form_for(@newblock) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="col-md-6 col-md-offset-3">
  	<div class="field">
    	<%= f.text_area :content, placeholder: "Enter HTML content..." %>
  	</div>
  	<%= f.submit "Create", class: "btn btn-large btn-primary" %>
  </div>
<% end %>