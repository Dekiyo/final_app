<% @story.blocks.order('number').each do |block| %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default storyblock">
			<div class="panel-body">
				<%= block.content.try(:html_safe) %>
			</div>
			<div class="panel-footer">
				<small>Posted by: <%= block.user.username unless block.user.blank? %> on 
					<%= block.updated_at.localtime.strftime("%b %d, %y at %I:%M%p") %></small>
				<% if current_user && @story.users.include?(current_user) %>
				<span class="pull-right">
				<%= button_to({:controller => :blocks, :action => 'destroy', :id => block.id, :story_id => @story.id }, :method => :delete, :data_toggle => 'tooltip', confirm: 'Are you sure you want to delete this block?', :title => 'Delete Block', :class => 'btn btn-xs btn-danger') do %>
				<span class="glyphicon glyphicon-remove"></span>
				<% end %>

				</span>
				<span class="pull-right">
				<%= button_to(edit_story_block_path(@story, block), :data_toggle => 'tooltip', :title => 'Edit Block', :method => "get", :class => 'btn btn-xs btn-primary') do %>
				<span class="glyphicon glyphicon-pencil"></span>
				<% end %>
				</span>

				<% end %>
			</div>
		</div>
	</div>
</div>
<% end %>